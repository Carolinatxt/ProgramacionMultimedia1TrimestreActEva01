<?xml version="1.0" encoding="utf-8"?>
<!--
  PANTALLA PRINCIPAL (MainActivity)
 Esta pantalla actúa como la portada de la aplicación.
 Muestra el logo, el nombre de la autora, un eslogan, un mensaje
 de bienvenida y un botón para navegar a la pantalla de presentación.
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_principal"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- LOGO CENTRAL -->
    <!-- Muestra el icono principal de la aplicación en el centro superior.
         Tiene una ligera elevación para dar sensación de profundidad. -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="207dp"
        android:layout_height="206dp"
        android:layout_marginTop="36dp"
        android:contentDescription="@string/app_logo"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- DIVISOR SUPERIOR -->
    <!-- Pequeña línea decorativa debajo del logo.
         Ayuda a separar visualmente el logo del contenido textual. -->
    <View
        android:id="@+id/divisorSuperior"
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:background="@color/rosa_suave"
        android:alpha="0.6"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- TARJETA CONTENEDORA (MaterialCardView) -->
    <!-- Contiene el nombre, el eslogan y el mensaje de bienvenida.
         Usa transparencia y bordes redondeados para destacar el contenido. -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContenido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#10FFFFFF"
        app:strokeColor="@color/rosa_suave"
        app:strokeWidth="1dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divisorSuperior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="8dp">

        <!-- Contenedor interno de la tarjeta -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- NOMBRE PRINCIPAL -->
            <!-- Muestra el nombre de la autora con tipografía grande y sombra. -->
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/nombre_principal"
                android:textColor="@color/rosa_suave"
                android:textSize="26sp"
                android:textStyle="bold"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- DIVISOR INTERNO -->
            <!-- Línea fina que separa el nombre del eslogan. -->
            <View
                android:id="@+id/divisorInterno"
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="@color/rojo_claro"
                android:alpha="0.5"
                app:layout_constraintTop_toBottomOf="@id/tvNombre"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"/>

            <!-- ESLOGAN -->
            <!-- Muestra el texto descriptivo del área de especialidad. -->
            <LinearLayout
                android:id="@+id/layoutEslogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/divisorInterno"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tvEslogan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eslogan_principal"
                    android:textColor="@color/rojo_acento"
                    android:textAllCaps="true"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="0.05"/>
            </LinearLayout>

            <!-- MENSAJE DE BIENVENIDA -->
            <!-- Breve texto de introducción para el usuario. -->
            <TextView
                android:id="@+id/tvBienvenida"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/mensaje_bienvenida"
                android:textColor="@color/rosa_suave"
                android:textSize="16sp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:alpha="0.95"
                app:layout_constraintTop_toBottomOf="@id/layoutEslogan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- DIVISOR INFERIOR -->
    <!-- Línea decorativa que separa el contenido del botón. -->
    <View
        android:id="@+id/divisorInferior"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="@color/rojo_claro"
        android:alpha="0.4"
        app:layout_constraintTop_toBottomOf="@id/cardContenido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- BOTÓN DE NAVEGACIÓN -->
    <!-- Lleva al usuario a la pantalla de presentación mediante un Intent.
         Tiene un fondo degradado y un icono de "play" a la derecha. -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnIrPresentacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ir_presentacion"
        android:textAllCaps="false"
        android:textColor="@color/blanco"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.05"
        android:background="@drawable/button_gradient"
        app:icon="@android:drawable/ic_media_play"
        app:iconTint="@color/blanco"
        app:iconGravity="end"
        app:iconSize="20dp"
        app:rippleColor="#80FFFFFF"
        android:elevation="12dp"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@id/divisorInferior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="20dp"/>

    <!-- FOOTER -->
    <!-- Texto pequeño inferior con la versión y año de la app. -->
    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/footer_text"
        android:textColor="@color/gris_texto"
        android:textSize="12sp"
        android:fontFamily="sans-serif-light"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
